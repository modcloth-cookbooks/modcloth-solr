common: &default_settings
  license_key: '<%= @newrelic[:api_key] %>'
  enable_auto_app_naming: false
  enable_auto_transaction_naming: true
  app_name: "<%= @newrelic[:app_name] %>"
  log_level: info
  apdex_t: <%= @newrelic[:apdex_t] %>
  ssl: false
  capture_params: false
  transaction_tracer:
    enabled: true
    transaction_threshold: apdex_f
    record_sql: obfuscated
    log_sql: false
    stack_trace_threshold: 0.5
    explain_enabled: true
    explain_threshold: 0.5
  error_collector:
    enabled: true
  thread_profiler:
    enabled: true
  browser_monitoring:
    auto_instrument: true
    enabled: true
production:
  <<: *default_settings
  app_name: "[production] <%= @newrelic[:app_name] %> [Solr]"

stage:
  <<: *default_settings
  app_name: "[stage] <%= @newrelic[:app_name] %> [Solr]"

demo:
  <<: *default_settings
  app_name: "[demo] <%= @newrelic[:app_name] %> [Solr]"

